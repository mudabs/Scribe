@model Scribe.Models.Category

@{
    
    ViewData["Title"] = "";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Icon" class="control-label">Category Icon</label>
                <input asp-for="IconUpload" class="form-control" />
                <br />
                <img src="" id="imgpreview" alt="" /> <br /> <br /> <br />
                <span asp-validation-for="IconUpload" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                |
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
            
        </form>
    </div>
</div>




@section Scripts {
    @* @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } *@
    <script>
        $("#IconUpload").change(function () {
            readURL(this);
        });
    </script>
}
