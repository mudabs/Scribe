@model Scribe.Models.Category

@{
    
    ViewData["Title"] = "";
}

<h1>Create</h1>


<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Icon" class="control-label">Category Icon</label>
                <input asp-for="IconUpload" class="form-control" />
                <br />
                <img style="width:100px;" src="" id="imgpreview" alt="" /> <br /> <br /> <br />
                <span asp-validation-for="IconUpload" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

