@model Scribe.Models.Warranty

<form asp-action="EditWarranty" method="post" id="warrantyEditForm">
    <div class="modal-header">
        <h5 class="modal-title">Edit Warranty - @Model.Model?.Name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ModelId" />

        <div class="mb-3">
            <label asp-for="PurchaseDate" class="form-label"></label>
            <input asp-for="PurchaseDate" class="form-control" type="date" />
        </div>

        <div class="mb-3">
            <label asp-for="WarrantyDurationYears" class="form-label"></label>
            <input asp-for="WarrantyDurationYears" class="form-control" type="number" />
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
