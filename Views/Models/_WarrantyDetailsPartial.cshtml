@model Scribe.Models.Warranty

<div class="modal-header">
    <h5 class="modal-title">Warranty Information - @Model.Model?.Name</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <p><strong>Purchase Date:</strong> @Model.PurchaseDate?.ToString("yyyy-MM-dd")</p>
    <p><strong>Warranty Duration (Years):</strong> @Model.WarrantyDurationYears</p>
</div>

<div class="modal-footer">
    <button class="btn btn-primary" id="editWarrantyBtn"
            data-model-id="@Model.ModelId">
        Edit Warranty
    </button>
    <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
