@{
     // Set the extended layout
    ViewData["Title"] = "Settings Page";
}

<div class="container-fluid">
    <div class="row">
        
        <main class="col-md-9 col-lg-10 ml-sm-auto px-4">
            <h3>Appearance Settings</h3>
            <div class="card p-4 mt-3 row " style="background-color: #f0f0f0; border:unset; border-radius:15px;">
                <h5 class="card-title">Theme</h5>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="theme" id="lightTheme" value="light" checked>
                    <label class="form-check-label" for="lightTheme">
                        Light
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="theme" id="darkTheme" value="dark">
                    <label class="form-check-label" for="darkTheme">
                        Dark
                    </label>
                </div>
            </div>
       
        </main>
    
    </div>
</div>

<style>
    .sidebar {
        background-color: #f0f0f0;
    }
</style>