@{
    var currentAction = "Home";
    var currentController = "Home";
}

<style>
    .side-nav {
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        background: #ffffff;
        border-right: 1px solid #ddd;
        transition: width 0.3s;
        overflow-x: hidden;
        z-index: 999;
    }

        .side-nav.full {
            width: 250px;
        }

        .side-nav.collapsed {
            width: 60px;
        }

        .side-nav .nav-item {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            white-space: nowrap;
            transition: background 0.2s;
        }

            .side-nav .nav-item:hover {
                background: #f0f0f0;
            }

        .side-nav .nav-icon {
            width: 24px;
            margin-right: 10px;
        }

        .side-nav .nav-label {
            transition: opacity 0.3s, width 0.3s;
        }

        .side-nav.collapsed .nav-label {
            display: none;
        }

        /* Toggle button */
        .side-nav .toggle-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

    /* Auto collapse on small screens */
    @media (max-width: 768px) {
        .side-nav

    {
        width: 60px;
    }

    .side-nav .nav-label {
        display: none;
    }

    }
</style>

<div class="side-nav full" id="sideNav">
    <!-- Toggle button -->
    <div class="toggle-btn" onclick="toggleSideNav()">
        <img src="/media/icons/static/menu-svgrepo-com.svg" class="nav-icon" />
    </div>

    <!-- Home -->
    <a asp-action="Index" asp-controller="Home" class="nav-item">
        <img src="/media/icons/static/home-svgrepo-com.svg" class="nav-icon" />
        <span class="nav-label">Home</span>
    </a>

    <!-- Assets -->
    <div>
        <div class="nav-item" data-bs-toggle="collapse" data-bs-target="#collapseAssets" aria-expanded="false">
            <img src="/media/icons/static/laptop-alt-2-svgrepo-com.svg" class="nav-icon" />
            <span class="nav-label">Assets</span>
        </div>
        <div id="collapseAssets" class="collapse ps-4">
            <a class="nav-item" asp-controller="SerialNumbers" asp-action="">All Assets</a>
            <a class="nav-item" asp-controller="Models" asp-action="">Add Asset</a>
            <a class="nav-item" asp-controller="Brands" asp-action="Index">Brands</a>
            <a class="nav-item" asp-controller="Categories" asp-action="Index">Categories</a>
            <a class="nav-item" asp-controller="Conditions" asp-action="Index">Conditions</a>
            <a class="nav-item" asp-controller="Locations" asp-action="Index">Locations</a>
        </div>
    </div>

    <!-- Logs -->
    <div>
        <div class="nav-item" data-bs-toggle="collapse" data-bs-target="#collapseLogs" aria-expanded="false">
            <img src="/media/icons/static/report-barchart-svgrepo-com.svg" class="nav-icon" />
            <span class="nav-label">System Logs</span>
        </div>
        <div id="collapseLogs" class="collapse ps-4">
            <a class="nav-item" asp-controller="Logs" asp-action="">All Logs</a>
            <a class="nav-item" asp-controller="Logs" asp-action="MyActivity">My Activity</a>
        </div>
    </div>

    <!-- Allocations -->
    <div>
        <div class="nav-item" data-bs-toggle="collapse" data-bs-target="#collapseAllocations" aria-expanded="false">
            <img src="/media/icons/static/users-svgrepo-com.svg" class="nav-icon" />
            <span class="nav-label">Allocations</span>
        </div>
        <div id="collapseAllocations" class="collapse ps-4">
            <a class="nav-item" asp-controller="ADUsers" asp-action="Index">Individual Allocations</a>
            <a class="nav-item" asp-controller="Groups" asp-action="">Group Allocations</a>
            <a class="nav-item" asp-controller="Departments" asp-action="Index">Departments</a>
        </div>
    </div>

    <!-- Maintenance -->
    <a asp-controller="Maintenances" asp-action="Index" class="nav-item">
        <img src="/media/icons/static/tools-svgrepo-com.svg" class="nav-icon" />
        <span class="nav-label">Maintenance</span>
    </a>
</div>

@section Scripts {
    <script>
        function toggleSideNav() {
            const sideNav = document.getElementById('sideNav');
            sideNav.classList.toggle('collapsed');
            sideNav.classList.toggle('full');
        }
    </script>
}
