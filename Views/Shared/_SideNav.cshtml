@{
    var currentAction = "Home";
    var currentController = "Home";
}

<style>
    .accordion-button:hover, .dropdown-item:hover {
        background-color: #f0f0f0;
        cursor: pointer;
    }

    .dropdown-item {
        display: block;
        padding: 0.5rem 1rem;
        color: #212529;
        text-decoration: none;
        background-color: transparent;
        border: 0;
    }
</style>

<div class="accordion" id="accordionMenu">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingHome">
            <a asp-action="" asp-controller="Home" style="text-decoration:none;"><h5 style="margin-left:20px; margin-top:16px;">@currentAction</h5></a>
        </h2>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingAssets">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAssets" aria-expanded="false" aria-controls="collapseAssets">
                <img src="/media/icons/static/laptop-alt-2-svgrepo-com.svg" style="width:20px;" /> Assets
            </button>
        </h2>
        <div id="collapseAssets" class="accordion-collapse collapse" aria-labelledby="headingAssets" data-bs-parent="#accordionMenu">
            <div class="accordion-body">
                <ul style="list-style-type: none; padding-left: 0;">
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="SerialNumbers" asp-action="" style="text-decoration:none">All Assets</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Models" asp-action="" style="text-decoration:none">Add Asset</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Brands" asp-action="Index" style="text-decoration:none">Brands</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Categories" asp-action="Index" style="text-decoration:none">Categories</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Conditions" asp-action="Index" style="text-decoration:none">Conditions</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Locations" asp-action="Index" style="text-decoration:none">Locations</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingLogs">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLogs" aria-expanded="false" aria-controls="collapseLogs">
                <img src="/media/icons/static/report-barchart-svgrepo-com.svg" style="width:20px;" /> System Logs
            </button>
        </h2>
        <div id="collapseLogs" class="accordion-collapse collapse" aria-labelledby="headingLogs" data-bs-parent="#accordionMenu">
            <div class="accordion-body">
                <ul style="list-style-type: none; padding-left: 0;">
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Logs" asp-action="" style="text-decoration:none">All Logs</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Logs" asp-action="MyActivity" style="text-decoration:none">My Activity</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingAllocations">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAllocations" aria-expanded="false" aria-controls="collapseAllocations">
                <img src="/media/icons/static/users-svgrepo-com.svg" style="width:20px;" /> Allocations
            </button>
        </h2>
        <div id="collapseAllocations" class="accordion-collapse collapse" aria-labelledby="headingAllocations" data-bs-parent="#accordionMenu">
            <div class="accordion-body">
                <ul style="list-style-type: none; padding-left: 0;">
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="ADUsers" asp-action="Index" style="text-decoration:none">Individual Allocations</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Groups" asp-action="" style="text-decoration:none">Group Allocations</a></li>
                    <li style="margin-bottom: 10px;"><a class="dropdown-item" asp-controller="Departments" asp-action="Index" style="text-decoration:none">Departments</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingMaintenance">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMaintenance" aria-expanded="false" aria-controls="collapseMaintenance">
                <img src="/media/icons/static/tools-svgrepo-com.svg" style="width:20px;" /> Maintenance
            </button>
        </h2>
        <div id="collapseMaintenance" class="accordion-collapse collapse" aria-labelledby="headingMaintenance" data-bs-parent="#accordionMenu">
            <div class="accordion-body">
                <a class="nav-link text-dark" asp-controller="Maintenances" asp-action="Index" style="text-decoration:none">Maintenance</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add any JS for dropdowns or other interactions
    </script>
}
