@{
    var currentAction = "Home";
}

<style>
    .side-nav {
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        background: #fff;
        border-right: 1px solid #ddd;
        width: 220px;
        transition: width 0.3s;
        overflow-y: auto;
        z-index: 1000;
    }

        .side-nav.collapsed {
            width: 60px;
        }

        .side-nav .toggle-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 50px;
            cursor: pointer;
            border-bottom: 1px solid #ddd;
        }

        .side-nav .accordion-button img {
            width: 20px;
            margin-right: 10px;
        }

        .side-nav.collapsed .accordion-button span {
            display: none;
        }

        .side-nav .accordion-header {
            padding: 0;
        }

        .side-nav .accordion-button {
            display: flex;
            align-items: center;
            width: 100%;
            text-align: left;
        }

        .side-nav .accordion-body {
            padding-left: 2rem;
        }

        .side-nav.collapsed .accordion-collapse,
        .side-nav.collapsed .accordion-body {
            display: none !important;
        }

    /* Auto collapse on small screens */
    @media (max-width: 768px) {
        .side-nav

    {
        width: 60px;
    }

    .side-nav .accordion-button span,
    .side-nav .accordion-body {
        display: none;
    }

    }

    .accordion-button::after {
        margin-left: auto;
    }

</style>

<div class="side-nav" id="sideNav">
    <div class="toggle-btn" onclick="toggleSideNav()">
        <img src="/media/icons/static/menu-svgrepo-com.svg" alt="Menu" width="24" />
    </div>

    <div class="accordion" id="accordionMenu">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingHome">
                <a asp-action="" asp-controller="Home" class="accordion-button">
                    <img src="/media/icons/static/home-svgrepo-com.svg" alt="Home" />
                    <span>@currentAction</span>
                </a>
            </h2>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingAssets">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAssets" aria-expanded="false" aria-controls="collapseAssets">
                    <img src="/media/icons/static/laptop-alt-2-svgrepo-com.svg" alt="Assets" />
                    <span>Assets</span>
                </button>
            </h2>
            <div id="collapseAssets" class="accordion-collapse collapse" aria-labelledby="headingAssets" data-bs-parent="#accordionMenu">
                <div class="accordion-body">
                    <ul class="list-unstyled">
                        <li><a class="dropdown-item" asp-controller="SerialNumbers" asp-action="">All Assets</a></li>
                        <li><a class="dropdown-item" asp-controller="Models" asp-action="">Add Asset</a></li>
                        <li><a class="dropdown-item" asp-controller="Brands" asp-action="Index">Brands</a></li>
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories</a></li>
                        <li><a class="dropdown-item" asp-controller="Conditions" asp-action="Index">Conditions</a></li>
                        <li><a class="dropdown-item" asp-controller="Locations" asp-action="Index">Locations</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingLogs">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLogs" aria-expanded="false" aria-controls="collapseLogs">
                    <img src="/media/icons/static/report-barchart-svgrepo-com.svg" alt="Logs" />
                    <span>System Logs</span>
                </button>
            </h2>
            <div id="collapseLogs" class="accordion-collapse collapse" aria-labelledby="headingLogs" data-bs-parent="#accordionMenu">
                <div class="accordion-body">
                    <ul class="list-unstyled">
                        <li><a class="dropdown-item" asp-controller="Logs" asp-action="">All Logs</a></li>
                        <li><a class="dropdown-item" asp-controller="Logs" asp-action="MyActivity">My Activity</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingAllocations">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAllocations" aria-expanded="false" aria-controls="collapseAllocations">
                    <img src="/media/icons/static/users-svgrepo-com.svg" alt="Allocations" />
                    <span>Allocations</span>
                </button>
            </h2>
            <div id="collapseAllocations" class="accordion-collapse collapse" aria-labelledby="headingAllocations" data-bs-parent="#accordionMenu">
                <div class="accordion-body">
                    <ul class="list-unstyled">
                        <li><a class="dropdown-item" asp-controller="ADUsers" asp-action="Index">Individual Allocations</a></li>
                        <li><a class="dropdown-item" asp-controller="Groups" asp-action="">Group Allocations</a></li>
                        <li><a class="dropdown-item" asp-controller="Departments" asp-action="Index">Departments</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingMaintenance">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMaintenance" aria-expanded="false" aria-controls="collapseMaintenance">
                    <img src="/media/icons/static/tools-svgrepo-com.svg" alt="Maintenance" />
                    <span>Maintenance</span>
                </button>
            </h2>
            <div id="collapseMaintenance" class="accordion-collapse collapse" aria-labelledby="headingMaintenance" data-bs-parent="#accordionMenu">
                <div class="accordion-body">
                    <a class="dropdown-item" asp-controller="Maintenances" asp-action="Index">Maintenance</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleSideNav() {
            const sideNav = document.getElementById('sideNav');
            sideNav.classList.toggle('collapsed');
        }
    </script>
}
